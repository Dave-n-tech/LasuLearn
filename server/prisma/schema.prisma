generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role
  matricNo  String?  @unique
  createdAt DateTime @default(now())

  enrollments       Enrollment[] // For students
  coursesCreated    Course[]           @relation("LecturerCourses") // For lecturers
  lectureProgresses LectureProgress[]
  attendanceLogs    AttendanceLog[]
  discussionPosts   DiscussionPost[]
  discussionReplies DiscussionReply[]
  attendanceReports AttendanceReport[] // For lecturers
  quizSubmissions   QuizSubmission[] // for students
  notifications Notification[]
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  code        String   @unique
  description String?
  createdAt   DateTime @default(now())
  lecturerId  Int

  lecturer          User               @relation("LecturerCourses", fields: [lecturerId], references: [id])
  enrollments       Enrollment[]
  lectures          Lecture[]
  discussionPosts   DiscussionPost[]
  attendanceReports AttendanceReport[]
}

model Enrollment {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  enrolledAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])
}

model Lecture {
  id        Int      @id @default(autoincrement())
  title     String
  videoUrl  String
  courseId  Int
  duration  Int
  createdAt DateTime @default(now())

  course          Course            @relation(fields: [courseId], references: [id])
  progresses      LectureProgress[]
  quizzes         Quiz[]
  attendanceLogs  AttendanceLog[]
  quizSubmissions QuizSubmission[]
}

model LectureProgress {
  id            Int       @id @default(autoincrement())
  userId        Int
  lectureId     Int
  watched       Boolean   @default(false)
  watchTime     Int       @default(0)
  skippedTime   Int       @default(0)
  playbackSpeed Float     @default(1.0)
  completedAt   DateTime?

  user    User    @relation(fields: [userId], references: [id])
  lecture Lecture @relation(fields: [lectureId], references: [id])
}

model AttendanceLog {
  id              Int      @id @default(autoincrement())
  userId          Int
  lectureId       Int
  markedAt        DateTime @default(now())
  engagementScore Int
  wasPresent      Boolean

  user    User    @relation(fields: [userId], references: [id])
  lecture Lecture @relation(fields: [lectureId], references: [id])
}

model Quiz {
  id            Int    @id @default(autoincrement())
  question      String
  options       String // Store as JSON stringified array (e.g., '["A", "B", "C"]')
  correctAnswer String
  lectureId     Int

  lecture         Lecture          @relation(fields: [lectureId], references: [id])
  quizSubmissions QuizSubmission[]
}

model QuizSubmission {
  id             Int      @id @default(autoincrement())
  userId         Int
  quizId         Int
  lectureId      Int
  selectedAnswer String
  isCorrect      Boolean
  submittedAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  quiz    Quiz    @relation(fields: [quizId], references: [id])
  lecture Lecture @relation(fields: [lectureId], references: [id])
}

model Notification {
  id Int @id @default(autoincrement())
  userId Int
  title String
  message String
  isRead Boolean @default(false)
  creaatedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model AttendanceReport {
  id          Int      @id @default(autoincrement())
  courseId    Int
  lecturerId  Int
  reportUrl   String
  generatedAt DateTime @default(now())

  lecturer User   @relation(fields: [lecturerId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}

model DiscussionPost {
  id        Int      @id @default(autoincrement())
  userId    Int
  courseId  Int
  content   String
  createdAt DateTime @default(now())

  user    User              @relation(fields: [userId], references: [id])
  course  Course            @relation(fields: [courseId], references: [id])
  replies DiscussionReply[]
}

model DiscussionReply {
  id        Int      @id @default(autoincrement())
  postId    Int
  userId    Int
  content   String
  createdAt DateTime @default(now())

  post DiscussionPost @relation(fields: [postId], references: [id])
  user User           @relation(fields: [userId], references: [id])
}

enum Role {
  STUDENT
  LECTURER
  ADMIN
}
